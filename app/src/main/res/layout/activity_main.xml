<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/app_color" >
    </android.support.v4.view.ViewPager>

    <include layout="@layout/line_fill"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/tab_img_my_plant"
            style="@style/MyTabStyle"
            android:src="@drawable/tab_my_plant"/>
        <ImageView
            android:id="@+id/tab_img_shop"
            style="@style/MyTabStyle"
            android:src="@drawable/tab_shop"/>
        <ImageView
            android:id="@+id/tab_img_bbs"
            style="@style/MyTabStyle"
            android:src="@drawable/tab_bbs"/>

    </LinearLayout>

</LinearLayout>