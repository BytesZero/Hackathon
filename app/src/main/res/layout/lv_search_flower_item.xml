<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_item_height"
        android:orientation="horizontal" >

        <com.huahuacaocao.hhcc_common.base.view.CircleImageView
            android:id="@+id/search_flower_item_iv_icon"
            android:layout_width="@dimen/app_item_icon"
            android:layout_height="@dimen/app_item_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/app_marge_16"
            android:layout_marginLeft="@dimen/app_page_marge"
            android:gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_no_photos" />

        <TextView
            android:id="@+id/search_flower_item_tv_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="name"
            android:textColor="@color/text_black_color"
            android:textSize="@dimen/textsize_18" />
    </LinearLayout>

    <include layout="@layout/line" />

</LinearLayout>